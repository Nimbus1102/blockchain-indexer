<BlockchainIndexer>

    <!-- application parameters -->
    <maxBlocks>201</maxBlocks>
    <publishPeriod>10</publishPeriod>    <!-- in milliseconds -->
    <xConfirmations>6</xConfirmations>  <!-- 6-confirmation used because attackers are unlikely to amass more than 10% of total compute -->
    <blockchainFile>/blockchain-indexer/blocks/200.json</blockchainFile>
    <databaseDirectory>/blockchain-indexer/db</databaseDirectory>

    <!-- test parameters -->
    <runTest>true</runTest>
    <numBlockTestCases>12</numBlockTestCases>
    <numAddressTestCases>0</numAddressTestCases>
    <blockTestDirectory>/blockchain-indexer/test/block_tests/</blockTestDirectory>
    <addressTestDirectory>/blockchain-indexer/test/address_tests/</addressTestDirectory>

</BlockchainIndexer>